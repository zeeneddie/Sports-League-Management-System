# Environment Configuration Example
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development

# Database Configuration (optional, not used in current simplified version)
DATABASE_URL=postgresql://username:password@localhost/spms_db

# API Configuration
HOLLANDSE_VELDEN_API_KEY=your-hollandse-velden-api-key-here
FOOTBALL_DATA_API_KEY=your-api-key-here

# Test Data Configuration
USE_TEST_DATA=false

# Security Configuration
# Set to false in production to disable debug mode
FLASK_DEBUG=false